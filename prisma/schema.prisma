datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userId     Int      @id @default(autoincrement()) @db.Integer
  email      String   @unique
  username   String   @unique
  firstName  String
  lastName   String?
  password   String
  created_at DateTime @default(now())

  // JWT / session
  access_token        String?   @db.Text
  access_token_expire DateTime?

  // Relasi ke Post
  posts Post[]

  @@map("users")
}

model Post {
  postId     Int        @id @default(autoincrement()) @db.Integer
  post_text  String
  visibility Visibility @default(draft)
  created_at DateTime   @default(now())

  // Relasi ke User
  user_id Int
  user    User @relation(fields: [user_id], references: [userId], onDelete: Cascade)

  @@map("posts")
}

enum Visibility {
  publish
  archive
  draft
}
